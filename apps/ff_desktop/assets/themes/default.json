{
  "name": "Default",
  "version": "1.0.0",
  "description": "Free File's default theme",
  "config": {
    "showBackButton": true,
    "showForwardButton": true,
    "showUpButton": true,
    "showRefreshButton": false,
    "showSearchBar": false,
    "showFileInSideBar": false
  },
  "workspaceShortcut": {
    "addTab": {
      "shortcutKey": [
        "CmdOrControl",
        "KeyT"
      ]
    },
    "closeTab": {
      "shortcutKey": [
        "CmdOrControl",
        "KeyW"
      ]
    },
    "closeAllTabs": {
      "shortcutKey": [
        "CmdOrControl",
        "Shift",
        "KeyW"
      ]
    },
    "nextTab": {
      "shortcutKey": [
        "Control",
        "Tab"
      ]
    },
    "previousTab": {
      "shortcutKey": [
        "Control",
        "Shift",
        "Tab"
      ]
    }
  },
  "shortcut": {
    "open": {
      "shortcutKey": [
        "Enter"
      ]
    },
    "openInNewWindow": {
      "showOnKeyHold": "Alt",
      "shortcutKey": [
        "CmdOrControl",
        "Alt",
        "Enter"
      ]
    },
    "openInNewTab": {
      "hideOnKeyHold": "Alt",
      "shortcutKey": [
        "CmdOrControl",
        "Enter"
      ]
    },
    "quickLook": {
      "shortcutKey": [
        "Space"
      ]
    },
    "compress": {},
    "copy": {
      "shortcutKey": [
        "CmdOrControl",
        "KeyC"
      ]
    },
    "paste": {
      "hideOnKeyHold": "Alt",
      "shortcutKey": [
        "CmdOrControl",
        "KeyV"
      ]
    },
    "move": {
      "showOnKeyHold": "Alt",
      "shortcutKey": [
        "CmdOrControl",
        "Alt",
        "KeyV"
      ]
    },
    "delete": {
      "hideOnKeyHold": "ShiftOrAlt",
      "shortcutKey": [
        "Delete"
      ]
    },
    "deletePermanently": {
      "showOnKeyHold": "ShiftOrAlt",
      "shortcutKey": [
        "ShiftOrAlt",
        "Delete"
      ]
    },
    "rename": {
      "shortcutKey": [
        "F2"
      ]
    },
    "properties": {
      "shortcutKey": [
        "Alt",
        "Space"
      ]
    }
  },
  "theme": {
    "light": {
      "color": {
        "primary": "#FFEE7A3B",
        "secondary": "#FF3FDD78",
        "background": "#00000000",
        "navBarBackground": "#FFF2F2F2",
        "mainBackground": "#FFFFFFFF",
        "statusBarBackground": "#FFEEEEEE",
        "onBackground": "#FF000000",
        "iconColor": "#FF000000",
        "disabledIconColor": "#FFBDBDBD"
      }
    },
    "dark": {
      "color": {
        "primary": "#FFEE7A3B",
        "secondary": "#FF3FDD78",
        "background": "#00000000",
        "navBarBackground": "#FF2F2F2F",
        "mainBackground": "#FF1F1F1F",
        "statusBarBackground": "#FF2F2F2F",
        "onBackground": "#FFFFFFFF",
        "iconColor": "#FFFFFFFF",
        "disabledIconColor": "#FFBDBDBD"
      }
    }
  }
}